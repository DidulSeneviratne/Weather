<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp"
    android:layout_marginBottom="6dp"
    android:background="@drawable/card_border"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:layout_gravity="start">

    <!-- Top Row: Date, Temp, Condition -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/textDate"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="2025-07-06"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textDayTemp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="28Â°" />

        <ImageView
            android:id="@+id/imageIcon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:contentDescription="Weather Icon"
            android:layout_marginEnd="8dp" />

        <TextView
            android:id="@+id/textDayCondition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="Clouds"
            android:layout_marginStart="8dp" />
    </LinearLayout>

    <!-- Bottom Row: Wind, Pressure, Precip -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textWind"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Wind: 6.5 m/s"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textPressure"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Pressure: 1010 hPa"
            android:textSize="14sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textPrecip"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Precipitation: 82%"
            android:textSize="14sp" />

    </LinearLayout>

</LinearLayout>
